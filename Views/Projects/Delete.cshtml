@model ProjectDipMVC.Models.Project

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить данный проект?</h3>
<div>
    <h4>Проект</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TitulName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TitulName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProjectId" />
        <input type="submit" value="Да, удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Список проектов</a>
    </form>
    <span class="text-danger field-validation-error" data-valmsg-for="" data-valmsg-replace="true">@TempData["ErrMessage"]</span>
</div>
