@model ProjectDipMVC.Models.ProjectDescript

@{
    ViewData["Title"] = "Подробности";
}

<h1>Подробности</h1>

<div>
    <h4>Задача по секции</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.SectionName)*@
            Название секции
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SectionName)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.SectionNumber)*@
            Номер секции
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SectionNumber)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Project)*@
            Проект
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Project.Name)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.User)*@
            Редактор
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProjDscrptId">Редактировать</a> |
    @Html.ActionLink("Назад к списку", "Index", "ProjectDescripts", new {ProjectId = Model.Project.ProjectId})
</div>
