@model ProjectDipMVC.Models.ProjectDescript

@{
    ViewData["Title"] = "Создание";
    var ProjectId = (int)ViewBag.ProjectId;
}

<h1>Создание</h1>

<h4>Задача по секции</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger">Введите корректное значение</div>
            <input id="ProjectId" asp-for="ProjectId" type="hidden" value="@ProjectId" />
            <div class="form-group">
                <label asp-for="SectionName" class="control-label">Название секции</label>
                <input asp-for="SectionName" class="form-control" />
                <span asp-validation-for="SectionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SectionNumber" class="control-label">Номер секции</label>
                <input asp-for="SectionNumber" class="form-control" />
                <span asp-validation-for="SectionNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label">Редактор</label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Назад к списку", "Index", "ProjectDescripts", new {ProjectId = ProjectId})
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
